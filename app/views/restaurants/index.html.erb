<div class="container">
  <ul>
    <div class="index-grid-container">
    <% @restaurants.each do |restaurant| %>
      <div class="restaurant-card">
        <%= link_to restaurant_path(restaurant) do %>
          <h2><%= restaurant.name %></h2>
          <p><%= restaurant.category %></p>
          <p><%= restaurant.address %></p>
        <% end %>
      </div>
    <% end %>
    </ul>
  </div>
</div>
